{{page-title this.model.heading}}
<h1>{{this.model.heading}}</h1>

     <div class="form-item">
      <div class="form-item-label">
        Title:
      </div>
      <div class="form-item-entry">
        <Input @type="text" size={{25}} id="title" @enter={{this.save}} @value={{this.model.title}} />
      </div> 
    </div>
    
{{#if this.model.can_change_name}}
    
     <div class="form-item">
      <div class="form-item-label">
        Page Name:
      </div>
      <div class="form-item-entry">
        <Input @type="text" size={{25}} id="name" @enter={{this.save}} @value={{this.model.name}} />
      </div> 
    </div>
    
{{/if}}

    
     <div class="form-item">
      <div class="form-item-label">
         Tags:
      </div>
      <div class="form-item-entry">
        <Input @type="text" size={{25}} id="tags" @enter={{this.save}} @value={{this.model.tags}} />
      </div> 
    </div>

   
    <MarkdownEditor @text={{this.model.text}} @rows={{30}} />
  
    <div class="action-buttons">
      {{#if this.model.can_do_minor_edits}}
      <Input @type="checkbox" @checked={{this.minorEdit}} /> Minor Edit
      {{/if}}
      <button class="btn btn-secondary" {{on 'click' this.cancel}}>Cancel</button>
      <button class="btn btn-primary" {{on 'click' this.save}}>Save</button>
    </div>
    
    <FlashMessages />    

<hr>
