{{page-title "Create Category"}}
<h1>Create Category</h1>

  
   <div class="form-item">
    <div class="form-item-label">
        Name:
    </div>
    <div class="form-item-entry">
        <Input @type="text" size={{25}} id="name" @enter={{this.save}} @value={{this.name}} />
    </div> 
  </div>
  
   <div class="form-item">
    <div class="form-item-label">
        Description:
    </div>
    <div class="form-item-entry">
        <Input @type="text" size={{25}} id="desc" @enter={{this.save}} @value={{this.desc}} />
    </div> 
  </div>
  
  <div class="form-item">
    <div class="form-item-label">
      <b>Can Read:</b>
    </div>

    <div class="form-item-entry">
      <PowerSelectMultiple @selected={{this.can_read}} @options={{this.model.roles}} @onChange={{this.readRolesChanged}} as |role|>
        {{role}}
      </PowerSelectMultiple>
    </div>
  </div>
  
  <div class="form-item">
    <div class="form-item-label">
      <b>Can Write:</b>
    </div>

    <div class="form-item-entry">
      <PowerSelectMultiple @selected={{this.can_write}} @options={{this.model.roles}} @onChange={{this.writeRolesChanged}} as |role|>
        {{role}}
      </PowerSelectMultiple>
      <div class="hint">Forums default to only allowing approved characters to post. If you want a forum where anyone can post, you must explicitly set the write role to 'everyone'.</div>
    </div>
  </div>
  

<div class="action-buttons">
  <LinkTo @route="forum-manage" class="btn btn-secondary">Cancel</LinkTo>  
  <button {{on 'click' this.save}} class="btn btn-primary">Save</button>
</div>
      
<FlashMessages />
